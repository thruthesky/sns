{
  "name": "@sns/web-components",
  "private": false,
  "version": "1.0.0",
  "description": "SNS Web Components built with Svelte 5 - 재사용 가능한 소셜 네트워크 컴포넌트",
  "type": "module",
  "main": "./dist/sns-components.umd.js",
  "module": "./dist/sns-components.es.js",
  "exports": {
    ".": {
      "import": "./dist/sns-components.es.js",
      "require": "./dist/sns-components.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite --config vite.demo.config.js",
    "dev:site1": "vite --config vite.site1.config.js",
    "build": "npm run build:lib && npm run build:demo",
    "build:lib": "vite build",
    "build:demo": "vite build --config vite.demo.config.js",
    "build:site1": "vite build --config vite.site1.config.js",
    "preview": "vite preview --config vite.demo.config.js",
    "preview:site1": "vite preview --config vite.site1.config.js",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/svelte": "^5.2.8",
    "@tsconfig/svelte": "^5.0.4",
    "@types/node": "^22.10.5",
    "autoprefixer": "^10.4.21",
    "happy-dom": "^20.0.10",
    "postcss": "^8.5.6",
    "svelte": "^5.43.2",
    "svelte-check": "^4.3.1",
    "tailwindcss": "^4.1.16",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3",
    "vite": "^7.1.7",
    "vitest": "^4.0.6"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.16",
    "dotenv": "^17.2.3",
    "firebase": "^12.5.0",
    "lucide-svelte": "^0.552.0"
  }
}
